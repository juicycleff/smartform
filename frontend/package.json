{
  "private": true,
  "name": "smartform",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo build",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "format:force": "biome check --fix --unsafe",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "build:client": "turbo build --cache=local:r,remote:rw --continue --concurrency 12 --filter @wakflo/client",
    "build:docs": "turbo build --cache=local:r,remote:rw --continue --concurrency 12 --filter docs",
    "build:app": "turbo build --cache=local:r,remote:rw --continue --filter app",
    "build:admin": "turbo build --cache=local:r,remote:rw --continue --filter admin",
    "build:cms": "turbo build --cache=local:r,remote:rw --continue --concurrency 12 --filter cms-studio",
    "build:landing": "turbo build --cache=local:r,remote:rw --continue --concurrency 12 --filter landing",
    "changeset": "changeset",
    "clean": "turbo clean && git clean -xdf node_modules && rm -rf node_modules",
    "dev:web": "turbo dev --no-cache --continue --concurrency 12 --filter landing",
    "nefi:app": "turbo nefi --no-cache --continue --concurrency 12 --filter app",
    "dev": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12",
    "dev:docs": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter docs",
    "dev:cms": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter cms-studio",
    "dev:email": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter emails",
    "dev:app": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter app",
    "dev:admin": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter admin",
    "dev:land": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter landing",
    "dev:story": "turbo dev --cache=local:rw,remote:r --continue --concurrency 12 --filter storybook",
    "gen:api": "turbo run gen:api",
    "gen:icon": "turbo run gen:icon",
    "gen:code": "turbo run codegen",
    "codegen:introspection": "turbo codegen:introspection --filter @wakflo/client-types",
    "codegen:types": "turbo codegen:types --filter @wakflo/client-types",
    "release": "turbo build --filter=@wakflo/jest-presets --filter=@wakflo/tsconfig && changeset publish",
    "test:ci": "turbo run test:ci --continue --concurrency 12",
    "tsr:watch": "turbo run tsr:watch",
    "typecheck": "turbo typecheck",
    "version-packages": "changeset version",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker,tailwindcss && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "migrate": "cd packages/database && npx prisma format && npx prisma generate && npx prisma db push"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.12",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/node": "^22.13.1",
    "eslint": "~9.20.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "typescript": "^5.7.3",
    "ultracite": "^4.1.19"
  },
  "engines": {
    "node": ">=18.18"
  },
  "workspaces": ["core", "react"],
  "packageManager": "pnpm@10.6.0",
  "type": "module"
}
