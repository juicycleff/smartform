{
  "name": "@xraph/smartform-core",
  "version": "0.1.0",
  "description": "Core TypeScript library for smartform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "docs": "typedoc --out docs src/index.ts"
  },
  "keywords": [
    "smartform",
    "typescript",
    "library",
    "forms",
    "dynamic-forms",
    "conditional-forms",
    "validation",
    "form-builder",
    "react",
    "vue",
    "angular"
  ],
  "author": "xraph",
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "cel-js": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
