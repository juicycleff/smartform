{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"declaration": true,
		"jsx": "react-jsx",
		"declarationDir": "./dist/types",
		"outDir": "./dist/esm",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
